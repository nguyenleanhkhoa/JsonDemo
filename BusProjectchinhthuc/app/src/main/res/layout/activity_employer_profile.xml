<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.busmanagerproject.EmployerProfile">
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:text="Thông tin Nhà Quản lý"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="15dp"
                android:gravity="center|left"
                android:textSize="20dp"
                android:text="Mã:"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <EditText
                android:paddingLeft="20dp"
                android:text="1"
                android:id="@+id/edtEmplID"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="15dp"
                android:gravity="center|left"
                android:textSize="20dp"
                android:text="Tên"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <EditText
                android:paddingLeft="20dp"
                android:text="Bùi Hồng Lân"
                android:id="@+id/edtEmplName"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="15dp"
                android:gravity="center|left"
                android:textSize="20dp"
                android:text="Email:"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <EditText
                android:paddingLeft="20dp"
                android:text="bruce@gmail.com"
                android:id="@+id/txtEmplEmail"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="15dp"
                android:gravity="center|left"
                android:textSize="20dp"
                android:text="Đại chỉ:"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <EditText

                android:paddingLeft="20dp"
                android:text="Bệnh viện chợ rẫy ,phòng 202"
                android:id="@+id/edtEmplAddr"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="13dp"
                android:gravity="center|left"
                android:textSize="20dp"
                android:text="Điện thoại:"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <EditText
                android:paddingLeft="20dp"
                android:text="113"
                android:id="@+id/edEmplPhone"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

      <Button
          android:textColor="@android:color/white"
          android:background="#363636"
          android:layout_marginTop="50dp"
          android:id="@+id/btnedit"
          android:text="Chỉnh sửa"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnEmplCancel"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/white"
            android:background="#363636"
            android:text="Lưu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
